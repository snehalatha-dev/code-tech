JavaScript 

// GSAP animations
gsap.from(".animate-text", {
  opacity: 0,
  y: -50,
  duration: 1,
  stagger: 0.3
});

gsap.from(".animate-card", {
  opacity: 0,
  scale: 0.8,
  duration: 1,
  delay: 1,
  stagger: 0.2
});


